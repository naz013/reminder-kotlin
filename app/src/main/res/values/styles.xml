<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="UiComponentFab" parent="@style/Widget.Material3.FloatingActionButton.Tertiary">
    </style>

    <style name="UiComponentExtendedFab" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Tertiary">
    </style>

    <style name="UiComponentBadge" parent="@style/MyTheme.DayNight">
        <item name="android:background">@drawable/badge_secondary_rounded</item>
        <item name="android:textAppearance">?textAppearanceTitleSmall</item>
        <item name="android:textColor">?colorOnSecondaryContainer</item>
    </style>

    <style name="UiComponentSectionLabel" parent="@style/MyTheme.DayNight">
        <item name="android:textAppearance">?textAppearanceLabelLarge</item>
        <item name="android:textColor">?colorTertiary</item>
    </style>

    <style name="UiComponentSectionLarge" parent="@style/MyTheme.DayNight">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UiComponentListCard" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentBannerCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentCustomViewCard" parent="@style/Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentDetailsCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentActionCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentActionCard.ButtonPositive" parent="@style/Widget.Material3.Button.TonalButton">
    </style>

    <style name="UiComponentActionCard.ButtonNeutral" parent="@style/Widget.Material3.Button.OutlinedButton">
    </style>

    <style name="UiComponentBannerCard.ButtonPositive" parent="@style/Widget.Material3.Button">
    </style>

    <style name="UiComponentBannerCard.ButtonNeutral" parent="@style/Widget.Material3.Button.OutlinedButton">
    </style>

    <!--Components-->

    <style name="FilledBoxStyle" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--OLD STYLES-->

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/MyTheme.DayNight</item>
    </style>



    <style name="BottomSheet.Base.Light" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>
        <item name="sheetsBackgroundColor">@color/sheetsDayBackground</item>
        <item name="sheetsPrimaryColor">?sheetsPrimaryColor</item>
        <item name="android:colorActivatedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorLongPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorFocusedHighlight">?attr/sheetsPrimaryColor</item>

        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

    <style name="BottomSheet.Base.Dark" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>

        <item name="sheetsBackgroundColor">@color/sheetsNightBackground</item>
        <item name="sheetsPrimaryColor">?colorPrimary</item>
        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogSheet.Base.Light" parent="Theme.Material3.Light.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>
        <item name="sheetsBackgroundColor">@color/sheetsDayBackground</item>
        <item name="sheetsPrimaryColor">?sheetsPrimaryColor</item>
        <item name="android:colorActivatedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorLongPressedHighlight">?attr/sheetsPrimaryColor</item>
        <item name="android:colorFocusedHighlight">?attr/sheetsPrimaryColor</item>

        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

    <style name="DialogSheet.Base.Dark" parent="Theme.Material3.Dark.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:colorEdgeEffect">?attr/sheetsHighlightColor</item>
        <item name="android:colorControlHighlight">?attr/sheetsHighlightColor</item>

        <item name="sheetsBackgroundColor">@color/sheetsNightBackground</item>
        <item name="sheetsPrimaryColor">?colorPrimary</item>
        <item name="android:colorPrimary">?attr/sheetsPrimaryColor</item>
        <item name="android:colorPrimaryDark">?attr/sheetsPrimaryColor</item>
        <item name="android:colorAccent">?attr/sheetsPrimaryColor</item>
        <item name="android:navigationBarColor">?attr/sheetsBackgroundColor</item>
    </style>

</resources>
