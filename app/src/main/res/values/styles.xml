<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="UiComponentSectionLabel" parent="@style/MyTheme.DayNight">
        <item name="android:textAppearance">?textAppearanceLabelLarge</item>
        <item name="android:textColor">?colorTertiary</item>
    </style>

    <style name="UiComponentSectionLarge" parent="@style/MyTheme.DayNight">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UiComponentListCard" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:stateListAnimator">@animator/card_animator_1dp_3dp</item>
    </style>

    <!--Components-->

    <style name="FilledBoxStyle" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <!--Toolbar-->
    <style name="Widget.MyTheme.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
    </style>


    <!--OLD STYLES-->

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/MyTheme.DayNight</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorControlNormal</item>
    </style>

    <style name="BackButtonStyle" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">?colorControlNormal</item>
    </style>
</resources>
