<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/selectInterval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interval"
                android:textAppearance="?textAppearanceCaption" />

            <LinearLayout
                android:id="@+id/intervalContainer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/create_margin"
                    tools:text="From"
                    android:textAppearance="?textAppearanceBody1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="To"
                    android:textAppearance="?textAppearanceBody1" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/selectHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/create_margin"
                android:text="@string/hours"
                android:textAppearance="?textAppearanceCaption" />

            <LinearLayout
                android:id="@+id/hoursContainer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/zero"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="0"
                        android:textOn="0"
                        android:textAppearance="?textAppearanceBody1" />

                    <ToggleButton
                        android:id="@+id/one"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="1"
                        android:textOn="1"
                        android:textAppearance="?textAppearanceBody1" />

                    <ToggleButton
                        android:id="@+id/two"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="2"
                        android:textOn="2"
                        android:textAppearance="?textAppearanceBody1" />

                    <ToggleButton
                        android:id="@+id/three"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="3"
                        android:textOn="3"
                        android:textAppearance="?textAppearanceBody1" />

                    <ToggleButton
                        android:id="@+id/four"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="4"
                        android:textOn="4"
                        android:textAppearance="?textAppearanceBody1" />

                    <ToggleButton
                        android:id="@+id/five"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="5"
                        android:textOn="5"
                        android:textAppearance="?textAppearanceBody1" />

                    <ToggleButton
                        android:id="@+id/six"
                        android:layout_width="@dimen/dialog_toggle_size"
