                    <ToggleButton
                        android:id="@+id/twentyThree"
                        android:layout_width="@dimen/dialog_toggle_size"
                        android:layout_height="@dimen/dialog_toggle_size"
                        android:background="@drawable/toggle_blue"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textOff="23"
