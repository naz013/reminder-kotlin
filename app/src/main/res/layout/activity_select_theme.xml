<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?android:colorBackground" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bgTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="16dp"
        android:text="@string/background"
        android:textAppearance="?textAppearanceCaption"
        android:textColor="?colorSecondary" />

    <com.github.naz013.colorslider.ColorSlider
        android:id="@+id/colorSliderBg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/material_margin" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="16dp"
        android:text="@string/accent"
        android:textAppearance="?textAppearanceCaption"
        android:textColor="?colorSecondary" />

    <com.github.naz013.colorslider.ColorSlider
        android:id="@+id/colorSlider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="@dimen/material_margin" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/warningCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_margin"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/material_margin"
        android:visibility="visible"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/warningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/it_s_not_recommended_to_use_this_colors_together"
            android:textAppearance="?textAppearanceHeadline6" />

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>