<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.elementary.tasks.core.views.roboto.RoboTextView
            android:id="@+id/themeTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/swipe_to_change_theme"
            android:textSize="20sp" />

        <com.elementary.tasks.core.views.roboto.RoboTextView
            android:id="@+id/themeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/themeTip"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="30sp"
            app:font_style="roboto_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/headerBg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/blackPrimary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/widgetDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/optionsButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:srcCompat="@drawable/ic_settings_white" />

                    <ImageButton
                        android:id="@+id/voiceButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:srcCompat="@drawable/ic_microphone_white" />

                    <ImageButton
                        android:id="@+id/plusButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="5"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:srcCompat="@drawable/ic_add_white_24dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/widgetBg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/material_divider"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/listItemCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp">

                            <TextView
                                android:id="@+id/taskText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="Some task"
                                android:textColor="@color/blackPrimary" />

                            <TextView
                                android:id="@+id/taskNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="123456789"
                                android:textColor="@color/blackPrimary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp">

                            <TextView
                                android:id="@+id/taskDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="22.10.2015"
                                android:textColor="@color/blackPrimary" />

                            <TextView
                                android:id="@+id/taskTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="20:30"
                                android:textColor="@color/blackPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>