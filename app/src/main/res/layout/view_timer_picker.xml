<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/emptyButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/deleteButton"
            android:layout_toEndOf="@+id/emptyButton"
            android:gravity="center">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hoursView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/hours"
                android:gravity="center|bottom"
                android:textAppearance="?textAppearanceHeadline3"
                tools:text="42" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/minutesView"
                android:gravity="center|top"
                android:text="@string/h"
                android:textAppearance="?textAppearanceBody1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/minutesView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/minutes"
                android:gravity="center|bottom"
                android:textAppearance="?textAppearanceHeadline3"
                tools:text="42" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/secondsView"
                android:gravity="center|bottom"
                android:text="@string/m"
                android:textAppearance="?textAppearanceBody1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/secondsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/seconds"
                android:gravity="center|bottom"
                android:textAppearance="?textAppearanceHeadline3"
                tools:text="55" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:gravity="center|bottom"
                android:text="@string/c"
                android:textAppearance="?textAppearanceBody1" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deleteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_twotone_backspace_24px"
            app:tint="?android:textColorPrimary" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b1"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b2"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="2"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b3"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="3"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b4"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="4"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b5"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="5"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b6"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="6"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b7"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="7"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b8"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="8"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b9"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="9"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text=""
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b0"
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="0.5" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialIconButtonOutlinedStyle"
            android:layout_width="@dimen/timer_button_size"
            android:layout_height="@dimen/timer_button_size"
            android:gravity="center"
            android:text=""
            android:textAppearance="?textAppearanceHeadlineSmall"
            app:shapeAppearance="@style/ShapeAppearance.TimerButton"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/timer_button_size"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>