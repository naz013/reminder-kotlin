<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/listHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:textAppearance="?textAppearanceSubtitle2"
            android:visibility="visible"
            tools:text="@string/tomorrow" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/itemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clipChildren="false"
            android:stateListAnimator="@animator/card_animator"
            app:cardCornerRadius="5dp"
            app:contentPadding="1dp"
            tools:targetApi="lollipop">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="8dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/itemCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:clickable="false"
                    app:chipSpacingHorizontal="4dp"
                    app:chipSpacingVertical="0dp"
                    app:layout_constraintEnd_toStartOf="@+id/button_more"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:enabled="false"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/chip_text_colors"
                        android:textColorLink="@color/chip_text_colors"
                        app:chipBackgroundColor="@color/chip_bg_colors"
                        app:chipEndPadding="0dp"
                        app:chipStartPadding="0dp"
                        app:chipStrokeColor="?colorSecondary"
                        app:chipStrokeWidth="1dp"
                        tools:text="@string/timer" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:enabled="false"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/chip_text_colors"
                        android:textColorLink="@color/chip_text_colors"
                        app:chipBackgroundColor="@color/chip_bg_colors"
                        app:chipEndPadding="0dp"
                        app:chipStartPadding="0dp"
                        app:chipStrokeColor="?colorSecondary"
                        app:chipStrokeWidth="1dp"
                        tools:text="Test" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:enabled="false"
                        android:textAppearance="?textAppearanceBody2"
                        android:textColor="@color/chip_text_colors"
                        android:textColorLink="@color/chip_text_colors"
                        app:chipBackgroundColor="@color/chip_bg_colors"
                        app:chipEndPadding="0dp"
                        app:chipStartPadding="0dp"
                        app:chipStrokeColor="?colorSecondary"
                        app:chipStrokeWidth="1dp"
                        tools:text="Test" />

                </com.google.android.material.chip.ChipGroup>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/itemCheck"
                    app:layout_constraintTop_toBottomOf="@+id/chipContainer">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/taskText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textAppearance="?textAppearanceHeadline5"
                        tools:text="Hello" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/taskDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:textAppearance="?textAppearanceHeadline6"
                        tools:text="25/05/2018" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reminder_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:textAppearance="?textAppearanceBody1"
                        android:visibility="visible"
                        tools:text="1256356549k" />

                    <LinearLayout
                        android:id="@+id/todoList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:fastScrollEnabled="false"
                        android:focusable="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/endContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/repeatInterval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:textAppearance="?textAppearanceBody2"
                            tools:text="every day" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/remainingTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:textAppearance="?textAppearanceBody2"
                            android:visibility="visible"
                            tools:text="10 minutes" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/button_more"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_twotone_more_vert_24px"
                    app:tint="?android:textColorPrimary" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>