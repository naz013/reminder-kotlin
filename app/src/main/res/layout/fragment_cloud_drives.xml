<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/clouds_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <com.elementary.tasks.core.views.TextViewWithIcon
                    android:id="@+id/dropboxTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="@string/dropbox"
                    android:textSize="@dimen/clouds_text_size"
                    app:font_style="roboto_regular"
                    app:tv_icon="@drawable/ic_dropbox"
                    app:tv_icon_light="@drawable/ic_dropbox_white" />

                <com.elementary.tasks.core.views.roboto.RoboButton
                    android:id="@+id/linkDropbox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/connect"
                    app:button_font_style="roboto_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/clouds_margin_top"
                android:orientation="horizontal">

                <com.elementary.tasks.core.views.TextViewWithIcon
                    android:id="@+id/gDriveTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="@string/google"
                    android:textSize="@dimen/clouds_text_size"
                    app:font_style="roboto_regular"
                    app:tv_icon="@drawable/ic_google"
                    app:tv_icon_light="@drawable/ic_google_white" />

                <com.elementary.tasks.core.views.roboto.RoboButton
                    android:id="@+id/linkGDrive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/connect"
                    app:button_font_style="roboto_light" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>