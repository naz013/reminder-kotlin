<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/red_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/red"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_red" />

            <ImageButton
                android:id="@+id/violet_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/purple"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_purple" />

            <ImageButton
                android:id="@+id/light_green_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/green_light"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_green_light" />

            <ImageButton
                android:id="@+id/green_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/green"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/light_blue_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/blue_light"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_blue_light" />

            <ImageButton
                android:id="@+id/blue_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/blue"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_blue" />

            <ImageButton
                android:id="@+id/yellow_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/yellow"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_yellow" />

            <ImageButton
                android:id="@+id/orange_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/orange"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/grey_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/grey"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_cyan" />

            <ImageButton
                android:id="@+id/pink_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/pink"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_pink" />

            <ImageButton
                android:id="@+id/sand_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/teal"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_teal" />

            <ImageButton
                android:id="@+id/brown_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/amber"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_amber" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/themeGroupPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/deepPurple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/dark_purple"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_deep_purple" />

            <ImageButton
                android:id="@+id/deepOrange"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/dark_orange"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_deep_orange" />

            <ImageButton
                android:id="@+id/limeCheckbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/lime"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_lime" />

            <ImageButton
                android:id="@+id/indigoCheckbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/indigo"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_drawable_indigo" />

        </LinearLayout>
    </LinearLayout>
</merge>