<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <Spinner
                    android:id="@+id/navSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.elementary.tasks.core.views.roboto.RoboEditText
                    android:id="@+id/taskSummary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="@string/remind_me"
                    android:maxLines="3"
                    android:textColor="@color/material_white"
                    android:textColorHint="@color/material_white" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/customButton"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_tune_white_24dp" />

                        <com.elementary.tasks.core.views.roboto.RoboTextView
                            android:id="@+id/groupButton"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginLeft="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:drawableLeft="@drawable/ic_local_offe_white_24dp"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="General"
                            android:textColor="@color/material_white"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/voiceButton"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_microphone_white" />

                        <ImageButton
                            android:id="@+id/exclusionButton"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_lock_button"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/repeatButton"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_refresh_white"
                            android:visibility="gone" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBar" />

    </RelativeLayout>
</layout>