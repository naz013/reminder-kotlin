<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/birdsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/pin_digit_icon_size"
                android:layout_height="@dimen/pin_digit_icon_size"
                app:srcCompat="@drawable/ic_fluent_text_asterisk"
                android:scaleType="centerInside"
                app:tint="?colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/pin_digit_icon_size"
                android:layout_height="@dimen/pin_digit_icon_size"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_fluent_text_asterisk"
                app:tint="?colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/pin_digit_icon_size"
                android:layout_height="@dimen/pin_digit_icon_size"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_fluent_text_asterisk"
                app:tint="?colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/pin_digit_icon_size"
                android:layout_height="@dimen/pin_digit_icon_size"
                android:layout_marginStart="16dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_fluent_text_asterisk"
                app:tint="?colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/pin_digit_icon_size"
                android:layout_height="@dimen/pin_digit_icon_size"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_fluent_text_asterisk"
                app:tint="?colorOnBackground" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/pin_digit_icon_size"
                android:layout_height="@dimen/pin_digit_icon_size"
                android:layout_marginStart="4dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_fluent_text_asterisk"
                app:tint="?colorOnBackground" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pin_view_space_btw_digits_top"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/b1"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="1" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b2"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="2" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b3"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="3" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pin_view_space_btw_digits_top"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/b4"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="4" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b5"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="5" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b6"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="6" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pin_view_space_btw_digits_top"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/b7"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="7" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b8"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="8" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/b9"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/pin_view_digit_text"
                android:textAppearance="?textAppearanceHeadline4"
                tools:text="9" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pin_view_space_btw_digits_top"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bF"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_fluent_fingerprint"
            app:tint="?android:textColorPrimary" />

        <FrameLayout
            android:id="@+id/b0"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="@drawable/pin_digit_shape_selector">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/t0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="?textAppearanceHeadline4"
                android:textSize="@dimen/pin_view_digit_text"
                tools:text="0" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bC"
            android:layout_width="@dimen/pin_digit_size"
            android:layout_height="@dimen/pin_digit_size"
            android:layout_marginStart="@dimen/pin_view_space_btw_digits"
            android:background="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_fluent_dismiss"
            app:tint="?android:textColorPrimary" />
    </LinearLayout>
</LinearLayout>
