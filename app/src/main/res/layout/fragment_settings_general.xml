<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.elementary.tasks.core.views.PrefsView
            android:id="@+id/language_prefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:prefs_divider_bottom="true"
            app:prefs_icon="@drawable/ic_twotone_language_24px"
            app:prefs_primary_text="@string/application_language"
            app:prefs_type="none" />

        <com.elementary.tasks.core.views.PrefsView
            android:id="@+id/appThemePrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:prefs_divider_bottom="true"
            app:prefs_icon="@drawable/ic_twotone_style_24px"
            app:prefs_primary_text="@string/theme"
            app:prefs_secondary_text="@string/auto"
            app:prefs_type="none" />

        <com.elementary.tasks.core.views.PrefsView
            android:id="@+id/time24hourPrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:prefs_divider_bottom="true"
            app:prefs_primary_text="@string/_24_hour_time_format"
            app:prefs_secondary_text_off="@string/use_12_hour_format"
            app:prefs_secondary_text_on="@string/use_24_hour_format"
            app:prefs_type="check_switch" />

        <com.elementary.tasks.core.views.PrefsView
            android:id="@+id/savePrefs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:prefs_divider_bottom="true"
            app:prefs_icon="@drawable/ic_twotone_save_24px"
            app:prefs_primary_text="@string/save_on_exit"
            app:prefs_secondary_text_off="@string/save_on_exit_off_text"
            app:prefs_secondary_text_on="@string/save_on_exit_on_text"
            app:prefs_type="check_switch" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
