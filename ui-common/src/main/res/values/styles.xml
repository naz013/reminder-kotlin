<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UiComponentValueTypePicker.InputBox" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
    </style>

    <style name="UiComponentValueTypePicker.Button" parent="@style/Widget.Material3.Button.TonalButton" >
        <item name="cornerRadius">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">?textAppearanceTitleMedium</item>
    </style>

    <style name="UiComponentTextButton" parent="@style/Widget.MaterialComponents.TextView" >
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="UiComponentFab" parent="@style/Widget.Material3.FloatingActionButton.Tertiary" />

    <style name="UiComponentExtendedFab" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Tertiary" />

    <style name="UiComponentBadge" parent="@style/AppTheme">
        <item name="android:background">@drawable/badge_secondary_rounded</item>
        <item name="android:textAppearance">?textAppearanceTitleSmall</item>
        <item name="android:textColor">?colorOnSecondaryContainer</item>
    </style>

    <style name="UiComponentSectionLarge" parent="@style/AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UiComponentListCard" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentBannerCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentCustomViewCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="UiComponentDetailsCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentActionCard" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentBuilderListCard" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="contentPadding">8dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="UiComponentActionCard.ButtonPositive" parent="@style/Widget.Material3.Button.TonalButton" />

    <style name="UiComponentActionCard.ButtonNeutral" parent="@style/Widget.Material3.Button.OutlinedButton" />

    <style name="UiComponentBannerCard.ButtonPositive" parent="@style/Widget.Material3.Button" />

    <style name="UiComponentBannerCard.ButtonNeutral" parent="@style/Widget.Material3.Button.OutlinedButton" />

    <style name="UiComponentMapCard" parent="@style/Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">5dp</item>
        <item name="android:stateListAnimator">@animator/card_animator</item>
    </style>

    <!--Components-->

    <style name="FilledBoxStyle" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
    </style>

    <style name="FilledBoxTransparentStyle" parent="@style/Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="OutlinedBoxStyle" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
    </style>

    <style name="DatePickerTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TimePickerTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!--OLD STYLES-->

    <style name="FullWidthBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:maxWidth">1200dp</item>
    </style>

    <style name="FullWidthBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullWidthBottomSheet</item>
    </style>
</resources>
